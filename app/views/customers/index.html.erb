<div class="container">

  <h2>Clientes</h2>
<div class="row no-more-tables">
  <div class="col-sm-2  navbar-form ">
    <%= link_to "Novo cliente", new_customer_path, remote: true, class: "btn btn-success" %>
  </div>
  <div class="new-customer"></div>

  <div class="col-sm-2 navbar-form pull-right">
      <%= render "search" %>
  </div>
</div>
  <table class="table table-bordered table-striped">
    <thead>
    <tr>
      <th><%= sort_link @search, :id, "Código Cliente" %></th>
      <th class="col-xs-3"><%= sort_link @search, :razao, "Razão Social" %></th>
      <th><%= sort_link @search, :iss, "ISS" %></th>
      <th><%= sort_link @search, :cnpj, "CNPJ" %></th>
      <th><%= sort_link @search, :cei, "CEI" %></th>
      <th><%= sort_link @search, :cgf, "CGF" %></th>
        
      <th>Honorarios</th>
      <th>Cliente Desde</th>
      <th colspan="3">Ação</th>
    </tr>
    </thead>
    <tbody id="customers">
    <%= render @customers %>
    </tbody>
  </table>

  <%= render 'dialog' %>

</div>