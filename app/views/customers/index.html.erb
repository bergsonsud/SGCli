<%= form_tag(customers_path, :method => "get", id: "search-form", class: "navbar-form") do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], placeholder: "Código Cliente", class: "form-control" %>
        <%= hidden_field_tag :id, 'all', placeholder: "Produto", class: "form-control" %>
        <%= select_tag(:type_search, options_for_select([['ID', 'id'], ['Nome', 'nome']])) %>
        <span class="input-group-btn">
          <%= submit_tag "Procurar", class: "btn btn-default" %>
        </span>
      </div>
      <% end %>


<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link @search, :id, "Código" %></th>
      <th><%= sort_link @search, :razao, "Razao" %></th>
      <th><%= sort_link @search, :iss, "ISS" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.razao %></td>
        <td><%= customer.iss %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
