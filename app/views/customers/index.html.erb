<%= form_tag(customers_path, :method => "get", id: "search-form", class: "navbar-form") do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], placeholder: "Busca", class: "form-control" %>
              <br>

              <%= radio_button_tag(:type_search, "id") %>
              <%= label_tag(:id, "Código") %>

              <%= radio_button_tag(:type_search, "razao") %>
              <%= label_tag(:razao, "Razão") %>

              <%= radio_button_tag(:type_search, "cnpj") %>
              <%= label_tag(:cnpj, "CNPJ") %>

        <span class="input-group-btn">
          <%= submit_tag "Procurar", class: "btn btn-default" %>
        </span>
      </div>
      <% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link @search, :id, "Código Cliente" %></th>
      <th><%= sort_link @search, :razao, "Razão Social" %></th>
      <th><%= sort_link @search, :iss, "ISS" %></th>
      <th><%= sort_link @search, :cnpj, "CNPJ" %></th>
      <th><%= sort_link @search, :cei, "CEI" %></th>
      <th><%= sort_link @search, :cgf, "CGF" %></th>
      <th><%= sort_link @search, :cod, "Código acesso" %></th>
      <th>Logradouro</th>
      <th>Numero</th>
      <th>Bairro</th>
      <th>Complemento</th>
      <th>Municipio</th>
      <th>Estado</th>
      <th>Telefone</th>
      <th>Telefone2</th>
      <th>Telefone3</th>
      <th>Celular</th>
      <th>Celular2</th>
      <th>Email</th>
      <th>Email2</th>
      <th>Contato</th>
      <th>Contato2</th>
      <th>Endereco coleta</th>
      <th>Honorarios</th>
      <th>Desde</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.razao %></td>
        <td><%= customer.iss %></td>
        <td><%= customer.cnpj %></td>
        <td><%= customer.cei %></td>
        <td><%= customer.cgf %></td>
        <td><%= customer.cod %></td>
        <td><%= customer.logradouro %></td>
        <td><%= customer.numero %></td>
        <td><%= customer.bairro %></td>
        <td><%= customer.complemento %></td>
        <td><%= customer.municipio %></td>
        <td><%= customer.estado %></td>
        <td><%= customer.telefone %></td>
        <td><%= customer.telefone2 %></td>
        <td><%= customer.telefone3 %></td>
        <td><%= customer.celular %></td>
        <td><%= customer.celular2 %></td>
        <td><%= customer.email %></td>
        <td><%= customer.email2 %></td>
        <td><%= customer.contato %></td>
        <td><%= customer.contato2 %></td>
        <td><%= customer.endereco_coleta %></td>
        <td><%= customer.honorarios %></td>
        <td><%= customer.desde %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

