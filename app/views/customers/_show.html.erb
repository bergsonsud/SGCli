<h3><%= @customer.razao %></h3>
<i class='glyphicon glyphicon-home'></i>
<%= @customer.address %>
<br>
<% if @customer.celular.present? %>
	<i class='glyphicon glyphicon-phone'></i>
	<%= @customer.mobilephone_numbers %>	
<% end %>
<% if @customer.telefone.present? %>
	<i class='glyphicon glyphicon-phone-alt'></i>
	<%= @customer.phone_numbers %>
	<br>
<% end %>
<% if @customer.email.present? %>
	<i class='glyphicon glyphicon-envelope'></i>
	<%= @customer.mail %>
	<br>
<% end %>	
<% if @customer.desde.present? %>
	Cliente desde: <%= @customer.since %> <%= time_ago_in_words(@customer.desde) %>
<% end %>
<br>

