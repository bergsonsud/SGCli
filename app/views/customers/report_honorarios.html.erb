<div class="container">

  <h1 class="section">Clientes</h1>
<div class="row no-more-tables">
  <div class="col-sm-2  navbar-form ">
    <%= link_to "Novo cliente", new_customer_path, remote: true, class: "btn btn-success fields-show-button" %>
  </div>
  <div class="new-customer"></div>

  <div class="col-sm-2 navbar-form pull-right">
      <%= render "search_honorarios" %>
  </div>
</div>
  <table class="table table-bordered table-striped">
    <thead>
    <tr>
      <th><label class="section"><%= sort_link @search, :id, "Código Cliente" %></label></th>
      <th class="col-xs-3"><label class="section"><%= sort_link @search, :razao, "Razão Social" %></label></th>
      <th><label class="section"><%= sort_link @search, :cnpj, "CNPJ" %></label></th>
      <th><label class="section"><%= sort_link @search, :cei, "% Honorarios" %></label></th>
      <th><label class="section">Valor</label></th>

    </tr>
    </thead>
    <tbody id="customers">
      <%= render "customers" %>
    </tbody>
  </table>

  <%= render 'dialog' %>

